{
  "actions": [
    {
      "trigger": {},
      "run": "cargo test"
    },

    {
      "trigger": { "filename": ".ext$" },
      "run": "echo testing file {{filename}}"
    },

    {
      "trigger": {
        "filename": ".ext$",
        "line": "d+"
      },
      "run": "echo testing file {{filename}} at line {{line}}"
    }
  ]
}
